page,.container{
    height: 100%;
    background: #EBF0F5;
  }
  .container{
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    padding: 32rpx;
    box-sizing: border-box;
  }
  .guide,.actions{
    width: 100%;
    box-sizing: border-box;
  }
  
  .guide{
    flex: 1;
    padding-bottom: 44rpx;
    position: relative;
  }
  .guide .image{
    width: 100%;
    height: 100%;
    box-shadow: 0px 10rpx 25rpx 0px rgba(86, 94, 102, 0.15);
  }
  .edit{
      position: absolute;
      right: 0;
      bottom: 40rpx;
      background: rgba(0, 0, 0, 0.25);
      border-radius: 8rpx 0px 8rpx 0px;
      color: #fff;
      font-size: 28rpx;
      font-family: PingFang SC;
      font-weight: 500;
      line-height: 50rpx;
      padding: 0 30rpx;
  }
  .edit .edit-icon{
    width: 24rpx;
    height: 24rpx;
    box-sizing: none;
    position: relative;
    top: 2rpx;
  }
  
  .actions{
    height: 96rpx;
    line-height: 96rpx;
    width: 90%;
    border-radius: 16rpx;
    text-align: center;
    font-size: 34rpx;
    font-family: PingFang SC;
    font-weight: 500;
    background: linear-gradient(90deg,rgba(255,160,51,1) 0%,rgba(255,203,82,1) 100%);
    color: #fff;
  }

  .popule{
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
    top: 0;
    background: rgba(29,32,35,0.64);
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .contain{
    width: 476rpx;
    height: 177rpx;
    padding: 65rpx;
    background: rgba(255, 255, 255, 1);
    border-radius: 24rpx;
    text-align: center;
    font-family: PingFang SC;
    line-height: 44rpx;
  }
  .contain .complete-icon{
    width: 62rpx;
    height: 62rpx;
    margin-bottom: 28rpx;
  }
  .contain .title{
    font-size: 38rpx;
    font-weight: bold;
    color: rgba(92,179,255,1);
  }
  .contain .info{
    font-size: 28rpx;
    font-weight: 400;
    color: rgba(86,94,102,1);
  }