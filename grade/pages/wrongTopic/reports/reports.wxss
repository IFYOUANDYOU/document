
/* 班级学生 报告列表 */
.scroll-reports {
    padding-bottom: 20rpx;
    box-sizing: border-box;
    height: calc(100%);
    position: fixed
}

.address_top {
    height: 56rpx;
    line-height: 56rpx;
    background: #EBEBEB;
    color: #999999;
    font-size: 28rpx;
    padding: 0 20rpx;
}

.scroll-reports .name_wrapper {
    margin-left: 113rpx;
    box-sizing: border-box;
    display: flex;
    align-items: center;
    justify-content: flex-start;
}

.group-item{
    position: relative;
    min-height: 98rpx;
}

.scroll-reports .group_title {
    width: 54rpx;
    height: 56rpx;
    left: 32rpx;
    position: absolute;
    top: 21rpx;
    text-align: center;
    line-height: 54rpx;
    color: #565E66;
    font-weight: 500;
    background: url(data:image/png;base64,) no-repeat;
    background-size: 54rpx 56rpx;
}

.scroll-reports .student_name {
    height: 88rpx;
    flex: 1;
    line-height: 88rpx;
    background: #fff;
    color: #1D2023;
    font-size: 34rpx;
    padding: 5rpx;
}
.scroll-reports .has-list:active{
    color: #5CB3FF;
}
.scroll-reports .student_name.no{
    color: #C4C8CC;
}

/* 右侧字母导航 */
.orientation_region {
    padding: 5px 0px;
    width: 45rpx;
    font-size: 20rpx;
    position: fixed;
    top: 50%;
    right: 6rpx;
    transform: translate(0, -50%);
    border-radius: 10px;
}

.orientation {
    white-space: normal;
    display: inline-block;
    width: 45rpx;
    height: 50rpx;
    font-size: 28rpx;
    font-weight: bold;
    color: rgb(88, 87, 87);
    text-align: center;
}

.orientation_mark {
    height: 40rpx;
    line-height: 40rpx;
    color: #1D2023;
    text-align: center;
}

.orientation_mark.active {
    color: #5CB3FF;
}