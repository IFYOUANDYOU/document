page{
  background: #EBF0F5;
}
.container{
  font-size: 28rpx;
  padding: 0 32rpx 120rpx;
  overflow: hidden;
}
.btn{
  color: #fff;
  font-size: 34rpx;
  text-align: center;
  line-height: 98rpx;
  height: 98rpx;
}
.unselects,.selects,.title{
  padding: 0 24rpx;
}
.title{
  padding-top: 40rpx;
  padding-bottom: 36rpx;
  font-size: 30rpx;
  color: #818D99;
}
.modules{
  margin-top: 24rpx;
}
.notice{
  margin-top: 24rpx;
  margin-bottom: 24rpx;
  font-size: 34rpx;
  font-weight: bold;
  color: #1D2023;
}
.selects{
  border-bottom: 1px solid #eee;
}
.item{
  margin-top: 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  line-height: 48rpx;
  font-size: 25rpx;
}
.item .text{
  flex: 1;
  border-radius: 16rpx;
  background: #fff;
}

.item .name{
  display: inline-block;
  color: #fff;
  padding: 10rpx 33rpx;
  line-height: 30rpx;
  border-radius: 16rpx 0px 16rpx 0px;
  margin-bottom: 24rpx;
}
.selects .name{
  background: #FFAA00;
}
.unselects .name{
  background: #5CB3FF;
}

.item .img image{
  width: 586rpx;
  height: auto;
}

.item .action{
  margin-left: 32rpx;
  border-radius: 50rpx;
}
.item .action, .item .action image{
  width: 50rpx;
  height: 50rpx;
}
.choose-btn{
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(90deg,rgba(255,160,51,1) 0%,rgba(255,203,82,1) 100%);
}

.choose-btn.unselect{
  background: linear-gradient(90deg,rgba(255,217,173,1) 0%,rgba(255,234,185,1) 100%);
}

.covers{
  padding-top: 30rpx;
  border-radius: 12rpx;
  background: #fff;
  position: relative;
  margin-bottom: 44rpx;
  box-shadow: 0px 10rpx 25rpx 0px rgba(86,94,102,0.15);
}
.covers .cover-img{
  width: 690rpx;
  height: auto;
}
.covers .change-module{
  position: absolute;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.25);
  height: 50rpx;
  display: flex;
  align-items: center;
  border-radius: 8rpx 0px;
  padding: 0 30rpx;
  line-height: 30rpx;
  color: #fff;
}
.change-module .edit-btn{
  width: 24rpx;
  height: 24rpx;
  margin-right: 9px;
}
.complete-btn{
  position: fixed;
  left: 64rpx;
  right: 64rpx;
  bottom: 58rpx;
  background: linear-gradient(90deg,rgba(255,160,51,1) 0%,rgba(255,203,82,1) 100%);
  border-radius: 16rpx;
}

/*弹窗样式*/
.pouple{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
}
.pouple-module{
  width: 80%;
  max-height: 90%;
  min-height: 200rpx;
  overflow-y: scroll;
  position: relative;
  text-align: right;
}
.pouple-module .closebtn{
  right: 0;
  top: 0;
  width: 23rpx;
  height: 23rpx;
  padding: 0 0 12rpx 12rpx;
}

.pouple-module .exampleImg{
  width: 100%;
  height: auto;
}