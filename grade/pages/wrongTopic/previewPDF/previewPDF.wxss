page {
    background: #EBF0F5;
}

.container {
    font-size: 28rpx;
    overflow: hidden;
    padding: 38rpx 32rpx;
}

.pdf-list {
    flex-shrink: 0;
    height: 80rpx;
    line-height: 80rpx;
    background: #fff;
    border-radius: 16rpx;
    font-size: 32rpx;
    overflow: hidden;
    padding-left: 32rpx;
    padding-right: 32rpx;
}

.pdf-view {
    position: absolute;
    left: 32rpx;
    right: 32rpx;
    bottom: 73rpx;
    top: 156rpx;
    box-shadow: 0px 10rpx 25rpx 0px rgba(86, 94, 102, 0.15);
    overflow: hidden;
}

.pdf-view .pdf_item {
    width: 100%;
    height: 100%;
    position: absolute;
    left: 0;
    top: 0;
    box-sizing: border-box;
    border: 1rpx solid #eee;
}

.pdf-view image {
    width: 100%;
    height: 100%;
}

.pdf-view .pdf_item{
    transform-style: preserve-3d;
    perspective: 1000;
    transform-origin: 0% center;
}

.pdf-view .last.prev {
    -webkit-animation: turn_left 1s linear;
          animation: turn_left 1s linear;
}

.pdf-view .active {
    -webkit-animation: turn_right 1s linear;
          animation: turn_right 1s linear;
}

@keyframes turn_left {
    0% {
        -webkit-transform: perspective(2000rpx) rotateY(0);
        transform: perspective(2000rpx) rotateY(0);
    }

    100% {
        -webkit-transform: perspective(2000rpx) rotateY(-180deg);
        transform: perspective(2000rpx) rotateY(-180deg);
    }
}
@keyframes turn_right {
    0% {
        -webkit-transform: perspective(2000rpx) rotateY(-180deg);
        transform: perspective(2000rpx) rotateY(-180deg);
    }

    100% {
        -webkit-transform: perspective(2000rpx) rotateY(0);
        transform: perspective(2000rpx) rotateY(0);
    }
}

.pdf-view .zindex1 {
    z-index: 1;
}

.pdf-view .zindex2 {
    z-index: 2;
}

.pdf-view .zindex3 {
    z-index: 3;
}

.pdf-view .zindex4 {
    z-index: 4;
}

.guide {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.42);
    display: flex;
    align-items: center;
    justify-content: space-around;
}

.guide-icon {
    width: 252rpx;
    height: 213rpx;
}